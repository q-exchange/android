<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_asset_container"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_eeeeee"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_asset_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/blue_main"
        android:textStyle="bold"
        android:textSize="16sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/currency"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_coin_name0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/color_999999"
                    android:textSize="13sp" />

                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/tv_coin_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text=" 7890.0000000"
                    android:textColor="@color/color_999999"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/availableCoin"
                    android:textColor="@color/primaryTextGray"
                    android:textSize="14sp" />

                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/tv_coin_available0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="0.000000"
                    android:textColor="@color/primaryText"
                    android:textSize="13sp" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/tv_coin_available1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="0.000000"
                    android:textColor="@color/primaryText"
                    android:textSize="13sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:gravity="center_vertical|right"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/borrowedCoin"
                    android:textColor="@color/primaryTextGray"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/tv_coin_borrowed0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00000"
                    android:gravity="center_vertical"
                    android:textColor="@color/primaryText"
                    android:textSize="13sp"/>
                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/tv_coin_borrowed1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00000"
                    android:gravity="center_vertical"
                    android:textColor="@color/primaryText"
                    android:textSize="13sp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

