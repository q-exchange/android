<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_home_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LTC"
            android:textColor="@color/color_333333"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_home_coin_base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="/USDT"
            android:textColor="@color/primaryTextGray"
            android:textSize="10sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_home_close"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="0.00"
        android:textColor="@color/color_333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/item_home_chg"
        android:layout_width="75dp"
        android:layout_height="29dp"
        android:layout_gravity="end"
        android:background="@drawable/selector_market_up_down"
        android:gravity="center"
        android:text="+15.00%"
        android:textColor="#ffffff"
        android:textSize="14sp" />

</LinearLayout>